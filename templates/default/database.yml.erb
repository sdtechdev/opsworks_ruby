<%=
  config = {}
  (['development', 'production'] + Array.wrap(@environment)).select(&:present?).uniq.each do |env|
    config[env] = {
      primary: @database,
      primary_replica: @replica
    }
  end

  if @factory_database
    config['factory'] = @factory_database
  end

  JSON.parse(config.to_json).to_yaml
-%>
